{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "target": "esnext",
    "outDir": "dist",
    "moduleDetection": "force"
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "example/",
  ]
}